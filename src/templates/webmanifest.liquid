---
permalink: /assets/site.webmanifest
---

{
  "name": "Portfolio {{ portfolio.name }}",
  "short_name": "Portfolio {{ portfolio.name }}",
  "description": "{{ portfolio.description }}",
  "start_url": "{{ '/' | relative }}",
  "icons": [{
      "src": "{{ 'favicon/android-chrome-192x192.png' | asset }}",
      "sizes": "192x192",
      "type": "image/png"
    }, {
      "src": "{{ 'favicon/android-chrome-512x512.png' | asset }}",
      "sizes": "512x512",
      "type": "image/png"
  }],
  "theme_color": "{{ portfolio.colors.primary | default: '#0074D9' }}",
  "background_color": "{{ portfolio.colors.backgroundLight }}",
  "display": "standalone"
}

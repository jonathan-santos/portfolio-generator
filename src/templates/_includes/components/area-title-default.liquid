    {{ portfolioName }}
    
    {% if title %}
      <span class='area-title__subtitle'>{{ title }}</span>
    {% endif %}
  </h1>

  {% if portfolioDescription %}
    <p class='area-title__description'>{{ portfolioDescription }}</p>
  {% endif %}
</div>

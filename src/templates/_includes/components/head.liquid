<head>
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'>
  <meta name='description' content='{{ description }}'>
  <meta name='theme-color' content='{{ portfolio.colors.primary }}'>
  <title>{{ name }} - {{ title | default: 'Home' }}</title>
  <link rel='icon' href='{{ 'favicon/favicon.ico' | asset }}' />
  <link rel='icon' type='image/png' sizes='32x32' href='{{ 'favicon/favicon-32x32.png' | asset }}'>
  <link rel='icon' type='image/png' sizes='16x16' href='{{ 'favicon/favicon-16x16.png' | asset }}'>
  <link rel='apple-touch-icon' sizes='180x180' href='{{ 'favicon/apple-touch-icon.png' | asset }}'>
  <link rel='preload' href='{{ 'styles.css' | asset }}' as='style'>
  <link rel='stylesheet' href='{{ 'styles.css' | asset }}'>
  <link rel='manifest' href='{{ 'site.webmanifest' | asset }}'>

  <style>
    :root {
      --color-primary: {{ portfolio.colors.primary | default: '#0074D9' }};
      --color-text-light: {{ portfolio.colors.text-light | default: '#FFFFFF' }};
      --color-text-dark: {{ portfolio.colors.text-dark | default: '#333333' }};
      --color-background-light: {{ portfolio.colors.background-light | default: '#FFFFFF' }};
      --color-background-dark: {{ portfolio.colors.background-dark | default: '#1A2A3A' }};
    }
  </style>
</head>

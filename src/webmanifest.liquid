---
permalink: /site.webmanifest
---

{
  "name": "Portfolio {{ portfolio.name }}",
  "short_name": "Portfolio {{ portfolio.name }}",
  "start_url": "{{ "/" | relativeLink }}",
  "icons": [{
      "src": "{{ "/favicon/android-chrome-192x192.png" | relativeLink }}",
      "sizes": "192x192",
      "type": "image/png"
    }, {
      "src": "{{ "/favicon/android-chrome-512x512.png" | relativeLink }}",
      "sizes": "512x512",
      "type": "image/png"
  }],
  "theme_color": "{{ portfolio.colors.primary }}",
  "background_color": "{{ portfolio.colors.backgroundLight }}",
  "display": "standalone"
}

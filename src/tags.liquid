---
pagination:
  data: portfolio.tags
  size: 1
  alias: filterTag
permalink: "/tags/{{ filterTag.name | slug }}/"
---

<!DOCTYPE HTML>
<html lang='en'>

<head>
  {% include head.html %}
  <title>{{ portfolio.name }} - Portfolio {{ filterTag.name }}</title>
</head>

<body>
  <main>
    {% include backButton.html %}

    {% include areaTitle.html %}

    {% include filters.html %}

    <div class='area-projects'>
      {% for project in portfolio.projects %}
        {% for tag in project.tags %}
          {% if tag == filterTag.name %}
            {% include project.html %}
          {% endif %}
        {% endfor %}
      {% endfor %}
    </div>
  </main>

  {% include footer.html %}
</body>

</html>

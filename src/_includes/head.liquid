<head>
  <meta charset='utf-8'>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'>
  <meta name='description' content='{{ portfolio.description }}'>
  <meta name='theme-color' content='{{ portfolio.colors.primary }}'>
  <title>{{ portfolio.name }} - {{ title | default: 'Home' }}</title>
  <link rel='stylesheet' href='{{ 'styles.css' | asset }}'>
  <link rel='apple-touch-icon' sizes='180x180' href='{{ 'favicon/apple-touch-icon.png' | asset }}'>
  <link rel='icon' type='image/png' sizes='32x32' href='{{ 'favicon/favicon-32x32.png' | asset }}'>
  <link rel='icon' type='image/png' sizes='16x16' href='{{ 'favicon/favicon-16x16.png' | asset }}'>
  <link rel='manifest' href='{{ '/site.webmanifest' | relative }}'>

  <style>
    :root {
      --primary-color: {{ portfolio.colors.primary | default: '#BF1CFF' }};
      --text-light-color: {{ portfolio.colors.textLight | default: '#EEEEEE' }};
      --text-dark-color: {{ portfolio.colors.textDark | default: '#333333' }};
      --background-light-color: {{ portfolio.colors.backgroundLight | default: '#EEEEEE' }};
      --background-dark-color: {{ portfolio.colors.backgroundDark | default: '#1A2A3A' }};
    }
  </style>
</head>

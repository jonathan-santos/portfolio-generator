<a href='{{ '/projects/' | relativeLink }}{{ project.name | slug }}/' class='project'>
  <img class='image' src='{{ project.icon | assetLink }}' alt='{{ project.name }} icon' loading='lazy'>

  <figcaption class='details'>
    <div class='top'>
      <h2 class='name'>{{ project.name }}</h2>
    </div>

    <div class='middle'>
      <p class='description'>{{ project.description }}</p>
    </div>

    <div class='bottom'>
      {% include categories-and-tags %}
    </div>
  </figcaption>
</a>

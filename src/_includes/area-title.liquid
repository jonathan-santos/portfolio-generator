<div class='area-title'>
  <h1 id='title' class='title'>
    {% if portfolio.heroImage %}
      <img src='{{ portfolio.heroImage | assetLink }}' alt='Title background image'>
    {% endif %}

    <span>
      {{ portfolio.name }}
      
      {% if title %}
        <br>
        {{ title }}
      {% endif %}
    </span>
  </h1>

  <p class='description'>{{ portfolio.description }}</p>
</div>

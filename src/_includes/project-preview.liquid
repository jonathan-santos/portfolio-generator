<a href='{{ '/projects/' | relative }}{{ project.name | slug }}/' class='project-preview'>
  <img class='project-preview__icon' src='{{ project.icon | img }}' alt='{{ project.name }} icon'>

  <figcaption class='project-preview__details'>
    <div class='project-preview__top'>
      <h2 class='project-preview__name'>{{ project.name }}</h2>
    </div>

    <div class='project-preview__middle'>
      <p class='project-preview__description'>{{ project.description }}</p>
    </div>

    <div class='project-preview__bottom'>
      {% include project-categories-and-tags %}
    </div>
  </figcaption>
</a>
